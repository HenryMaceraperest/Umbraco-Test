@inherits UmbracoViewPage<BlockListItem>

@{
    var row = (ImageRow)Model.Content;
    if (row.Image == null) return;
    var settings = (ImageRowSettings)Model.Settings;
    if(settings?.Hide ?? false) { return; }
}

<div class="col-lg-12 col-xxl-12">
    <div class="text-center my-5">
        @if (row.ImageLink != null)
        {
            @:<a href="@row.ImageLink.Url" target="@row.ImageLink.Target" title="@row.ImageCaption">
        }
        <img class="img-fluid" src="@row.Image.Url()" alt="@row.ImageCaption">
        <span class="caption text-muted">@row.ImageCaption</span>
        @if (row.ImageLink != null)
        {
            @:</a>
        }
    </div>
</div>